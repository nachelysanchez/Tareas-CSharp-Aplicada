<Window x:Class="MenuEjercicio4.Ejercicios.Potencias.pNumero"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MenuEjercicio4.Ejercicios.Potencias"
        mc:Ignorable="d"
        Title="Potenciacion" Height="200" Width="200">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="0,5">
            <StackPanel Orientation="Vertical" Margin="0,5">
                <Label x:Name="NumeroLabel" Content="Ingrese el numero : "  HorizontalAlignment="Center"/>
                <TextBox Name="NumeroTextBox" Height="15" Width="120" HorizontalAlignment="Center" Margin="5,0"/>
                <Label x:Name="PotenciaLabel" Content="Ingrese la potencia: "  HorizontalAlignment="Center"/>
                <TextBox Name="PotenciaTextBox" Height="15" Width="120" HorizontalAlignment="Center" Margin="5,0"/>
                <Button x:Name="CalcularButton" Height="20" Width="50" HorizontalAlignment="Center" Margin="5,8" Content="Calcular" Click="CalcularButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
